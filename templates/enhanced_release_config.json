{
  "name": "Enhanced Unity Package Release System",
  "version": "2.0.0",
  "description": "Sistema de release otimizado para pacotes Unity com semantic versioning",
  "features": {
    "semantic_release": true,
    "unity_package_support": true,
    "automated_changelog": true,
    "github_integration": true,
    "dependency_filtering": true,
    "conventional_commits": true
  },
  "workflow_config": {
    "node_version": "18",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "release_rules": [
      {"type": "feat", "release": "minor"},
      {"type": "fix", "release": "patch"},
      {"type": "perf", "release": "patch"},
      {"type": "refactor", "release": "patch"},
      {"type": "docs", "release": false},
      {"breaking": true, "release": "major"}
    ]
  },
  "unity_optimization": {
    "filter_unity_deps": true,
    "preserve_package_manifest": true,
    "automated_versioning": true,
    "changelog_localization": "pt-BR"
  }
}

